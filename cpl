def compare_with_500(number):
    """
    Функция для сравнения числа с 500.
    Возвращает True, если число больше 500, и False в противном случае.
    """
    return number > 500

# Основная часть программы
if __name__ == "__main__":
    while True:
        try:
            # Запрашиваем у пользователя ввод числа
            user_input = input("Введите число (или 'exit' для выхода): ").strip()
            
            # Если пользователь ввёл команду для выхода
            if user_input.lower() == 'exit':
                print("Программа завершена.")
                break
            
            # Проверяем, является ли ввод числом
            if user_input.replace('.', '', 1).isdigit():  # Проверка на целое или дробное число
                number = float(user_input)  # Преобразуем в число
                
                # Сравниваем число с 500
                if compare_with_500(number):
                    print(f"Число {number} больше 500.")
                else:
                    print(f"Число {number} меньше или равно 500.")
            else:
                raise ValueError(f"Ошибка: '{user_input}' не является числом!")  # Выбрасываем исключение
        
        except ValueError as ve:
            # Обработка ошибки ввода данных
            print(ve)
        except Exception as e:
            # Обработка любых других непредвиденных ошибок
            print(f"Произошла непредвиденная ошибка: {e}")
