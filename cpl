def compare_with_500(number):
    """
    Функция для сравнения числа с 500.
    Возвращает True, если число больше 500, и False в противном случае.
    """
    return number > 500

# Основная часть программы
if __name__ == "__main__":
    try:
        # Запрашиваем у пользователя ввод числа
        user_input = input("Введите число: ")
        
        # Преобразуем введённую строку в число (целое или дробное)
        try:
            number = float(user_input)  # Попытка преобразовать в число
        except ValueError:
            raise ValueError(f"Ошибка: '{user_input}' не является числом!")  # Выбрасываем собственное исключение
        
        # Сравниваем число с 500
        if compare_with_500(number):
            print(f"Число {number} больше 500.")
        else:
            print(f"Число {number} меньше или равно 500.")
    
    except ValueError as ve:
        # Обрабатываем ошибку ввода данных
        print(ve)
    except Exception as e:
        # Обрабатываем любые другие непредвиденные ошибки
        print(f"Произошла непредвиденная ошибка: {e}")
